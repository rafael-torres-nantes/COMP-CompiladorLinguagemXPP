// Este arquivo demonstra as verificações semânticas implementadas

class Animal {
    int idade;
    string nome;
    
    constructor(int i, string n) {
        idade = i;
        nome = n;
    }
    
    int getIdade() {
        return idade;
    }
    
    string getNome() {
        return nome;
    }
}

class Cachorro extends Animal {
    string raca;
    int idadeLocal;  // Adicionada variável local para evitar acessar membro herdado
    
    constructor(int i, string n, string r) {
        super(i, n);
        raca = r;
        idadeLocal = i;  // Armazena localmente
    }
    
    string getRaca() {
        return raca;
    }
    
    int calcularIdadeHumana() {
        int idadeHumana;
        idadeHumana = idadeLocal * 7;  // Usa variável local
        return idadeHumana;
    }
}

class TestePrincipal {
    constructor() {
        // Construtor vazio necessário quando classe não tem variáveis
    }
    
    int testar() {
        int resultado;
        string texto;
        
        resultado = 21;  // Simula idade humana
        texto = "Rex";
        
        print resultado;
        print texto;
        
        // Teste de escopo em if
        if (resultado > 20) {
            int temp;
            temp = resultado - 20;
            print temp;
        }
        
        // Teste de escopo em for
        int i;
        i = 0;
        for (; i < 5; i = i + 1) {
            int valor;
            valor = i * 2;
            print valor;
        }
        
        return resultado;
    }
}
